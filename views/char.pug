extends layout

block content
  h2 Character Sheet For #{char.alias()}
  table(class='big')
    tr
      th Attribute
      th Value
    each field in fields
      if field.display
        tr
          td #{field.display}
          td 
            if field.type === 'bool'
              =char[field.name] ? 'Yes' : 'No'
            else
              =char[field.name]
