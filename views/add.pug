extends layout

block content
  h2 Add protagonists
  p
    =title
  p NOTE: Will be in  entered into the turn sequence directly after #{char.display}
  form(method="post" action='/encounter/' + action)
    ul
      for option in options
        li
          input(type='checkbox' name=option)
          = option
    p
    input(type="hidden" name="name" value=char.name)
    input(type="submit" name="submit_param" value="Submit" class="link-button")
